<div>
    <h2>TOMOOOOOOOOOOOOOOOAqui los detalles TOMOS es decir, individualizado y con sus detalles</h2>
   
    {{#if this.isAdmin}}
      <a href="/{{this.manga._id}}/modificar-manga">Update manga</a>

      <form action="/{{this.manga._id}}/borrar-manga" method="post">
        <button type="submit">Delete manga</button>
      </form>
    {{/if}}

    <div>
        <h4>{{this.manga.title}}</h4>
        <h4>{{this.manga.numVolume}}</h4>
        <h4>{{this.manga.collectionType}}</h4>
        <h4>{{this.manga.description}}</h4>
        <h4>{{this.manga.author}}</h4>
        <h4>{{this.manga.genre}}</h4>
      <img src="{{this.manga.image}}" alt="imagen tomo">

    </div>
</div>